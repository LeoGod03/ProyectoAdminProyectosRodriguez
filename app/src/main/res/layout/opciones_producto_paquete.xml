<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Opciones de productos/paquetes"
                android:textAlignment="center"
                android:textColor="@color/amarilloBrillanet"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/btnImgProductos"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/borde_brillante"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nuevo_producto"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/tvIngredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Productos"
                android:textColor="@color/amarilloBrillanet"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btnImgPaquetes"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde_brillante"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nuevo_paquete"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/tvUtensilios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Paquetes"
                android:textColor="@color/amarilloBrillanet"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btnImgListaProductosPaquetes"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde_brillante"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nuevo_paquete"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/tvListaProductosPaquetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lista de productos/paquetes"
                android:textColor="@color/amarilloBrillanet"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnRegresar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/rojoVibrante"
                android:text="Regresar"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>